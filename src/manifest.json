{
  "manifest_version": 3,
  "name": "SoundCloud Player",
  "short_name": "SC Player",
  "description": "SoundCloud Popup Player ðŸ”¥",
  "version": "1.3.6.4",
  "homepage_url": "https://akiba.cloud/soundcloud-player/",
  "permissions": [
    "tabs",
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "lib/SoundCloudControllerExt.js",
        "browser-polyfill.min.js",
        "jquery-3.4.1.min.js",
        "contents/contents.js",
        "contents/utils.js"
      ],
      "matches": [
        "*://soundcloud.com/*"
      ],
      "run_at": "document_end"
    },
    {
      "all_frames": true,
      "js": [
        "injector.js"
      ],
      "matches": [
        "*://soundcloud.com/*"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Open the popup"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "inject_audio.js"
      ],
      "matches": [
        "*://soundcloud.com/*"
      ]
    }
  ]
}